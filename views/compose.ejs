<%- include('./partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="">Title</label>
    <input
      type="text"
      class="form-control"
      name="postTitle"
      placeholder=""
      autocomplete=""
    />
  </div>
  <div class="form-group">
    <label for="">Post</label>
    <textarea
      class="form-control"
      name="postBody"
      rows="5"
      cols="50"
    ></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="">Publish</button>
</form>

<%- include('./partials/footer'); -%>

